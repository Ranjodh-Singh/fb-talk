<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF99" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF99" >

    <!--
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical" >
    </LinearLayout>
    -->

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="47dp"
        android:layout_marginTop="47dp"
        android:text="@string/questionText"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/questionText"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="19dp"
        android:gravity="center_vertical" >

        <RadioButton
            android:id="@+id/OptionradioButtonA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/OptionradioButtonA" />

        <RadioButton
            android:id="@+id/OptionradioButtonB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/OptionradioButtonB" />

        <RadioButton
            android:id="@+id/OptionradioButtonC"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/OptionradioButtonC" />

        <RadioButton
            android:id="@+id/OptionradioButtonD"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/OptionradioButtonD" />
    </RadioGroup>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="125dp"
        android:text="@string/nextButton" />

    <TextView
        android:id="@+id/questionCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radioGroup1"
        android:layout_alignParentLeft="true"
        android:text="@string/questionCounter"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Chronometer
        android:id="@+id/quizClockCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/questionCounter"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/nextButton"
        android:gravity="right"
        android:text="@string/questClockCounter" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/backButton" />

</RelativeLayout>

</ScrollView>